<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mytourguide">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/main_label"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttractionsActivity"
            android:label="@string/title_activity_attractions">
        </activity>
        <activity
            android:name=".BarsActivity"
            android:label="@string/title_activity_bars">
        </activity>
        <activity
            android:name=".ParksActivity"
            android:label="@string/title_activity_parks">
        </activity>
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/title_activity_restaurants">
        </activity>
    </application>

</manifest>